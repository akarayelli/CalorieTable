<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_round_rect">


    <TextView
        android:id="@+id/txt_vp_item_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Navigation"
        android:textColor="#9b92b3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/constraint"
        app:layout_constraintLeft_toLeftOf="@+id/calorie_value"
        app:layout_constraintRight_toLeftOf="@id/calorie_value"
        app:layout_constraintTop_toTopOf="@id/constraint"
        app:layout_constraintWidth_percent="0.60" />


    <TextView
        android:id="@+id/calorie_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="X Kcal"
        android:textColor="#9b92b3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/constraint"
        app:layout_constraintLeft_toRightOf="@+id/txt_vp_item_list"
        app:layout_constraintTop_toTopOf="@id/constraint"
        app:layout_constraintWidth_percent="0.28" />


    <ImageButton
        android:id="@+id/favorite_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icn_add_favorite"
        app:layout_constraintRight_toRightOf="@id/constraint"
        app:layout_constraintWidth_percent="0.12" />


